
<% if user_signed_in? %>

<h1> Welcome Back to Super Secret Club <%=  current_user.name %> </h1> <br>



<h2> Here are your posts</h2><br>


  <% current_user.posts.each do |post| %>
   <div> Title: <%= post.title%> </div><br>
    <div> Body: <%= post.body%> </div><br>
    <%end%>

<%= link_to "New post", new_post_path %> <br> 
<%= link_to "All posts", posts_path %> <br> 
<%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete%>


<%else%>

<h1> Welcome Super Secret Club </h1> <br>


<%= link_to "All posts", posts_path %> <br> 

 <%= link_to "Log in", "/users/sign_in" %><br />

<%end%>






